# Backend environment variables
# Faça uma cópia deste arquivo para backend/.env e preencha os valores necessários.

# Configurações básicas
DEBUG=True
DJANGO_SETTINGS_MODULE=movie_project.settings.development

# Chave secreta do Django (obrigatório em produção)
# Gere uma chave com: python -c "import secrets; print(secrets.token_urlsafe(50))"
SECRET_KEY=coloque_sua_secret_key_aqui

# Configuração do banco de dados (para desenvolvimento)
DATABASE_URL=sqlite:///db.sqlite3

# Configurações de hosts permitidos (separados por vírgula)
ALLOWED_HOSTS=localhost,127.0.0.1

# Configurações CORS
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

